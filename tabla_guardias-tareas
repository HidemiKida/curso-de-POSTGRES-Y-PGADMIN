create table tareas(
codigo serial,
domicilio varchar(30),
descripción varchar(30),
horario char(2), /* 'AM' o 'PM'*/
primary key (codigo)
);

INSERT INTO tareas (domicilio, descripción, horario) VALUES ('Calle Falsa 123', 'Vigilancia nocturna', 'PM');
